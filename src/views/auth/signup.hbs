<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
              <div class="card-header">
                 <h3>SignUp</h3>
              </div>
              <img src="/images/logo-google.png" class="mx-auto w-25">
              <div class="card-body">
                  <form action="/signup" method="POST">
                  <div class="form-group">
                     <input type="type" name="first_name" placeholder="First name" 
                     class="form-control" autofocus required>
                  </div>
                   <div class="form-group">
                     <input type="type" name="last_name" placeholder="last name" 
                     class="form-control" required >
                  </div>
                   <div class="form-group">
                     <input type="type" name="username" placeholder="User name" 
                     class="form-control" required >
                  </div>
                   <div class="form-group">
                     <input type="email" name="email" placeholder="email" 
                     class="form-control" required >
                  </div>
                   <div class="form-group">
                     <input type="password" name="password" placeholder="Password" 
                     class="form-control" required >
                  </div>
                  <div class="form-group">
                    <button class="btn btn-success btn-block">
                        SignIn
                    </button>
                  </div>
                  </form>
              </div>
            </div>
        </div>
    </div>

</div>